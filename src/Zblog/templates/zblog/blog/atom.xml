{* n'oubliez pas si vous avez des espaces dans vos urls, d'utiliser escurl ou rawurlencode *}
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>Zeroload, blog performance et d√©veloppement web</title>
	<link rel="self" href="{url 'blog_feed'}" />
	<updated>{$now}</updated>
	<author>
		<name>Vincent Voyer</name>
		<email>vincent@zeroload.net</email>
		<uri>http://zeroload.net/about/</uri>
	</author>
	<id>http://zeroload.net/blog/</id>
	<icon>{mediaurl '/img/blog/icon-feed.png'}</icon>
	<logo>{mediaurl '/img/blog/logo-feed.png'}</logo>

	{foreach $posts as $post}
	<entry>
		<id>http://zeroload.net{url 'blog_post', strtolower(rawurlencode($post.title))}</id>
		<title>{$post.title}</title>
		<updated>{$post.atom_date}</updated>
		<author>
			<name>Vincent Voyer</name>
		</author>
		<content type="xhtml">
			<div xmlns="http://www.w3.org/1999/xhtml">
				{$post.content|markdown|safe}
			</div>
		</content>
		<link rel="alternate" href="{url 'blog_post', strtolower(rawurlencode($post.title))}"/>
		<summary type="xhtml">
			<div xmlns="http://www.w3.org/1999/xhtml">
				{$post.summary|markdown|safe}
			</div>
		</summary>
		{foreach $post.tags as $tag}
		<category term="{$tag.name}"/>
		{/foreach}
	</entry>
	{/foreach}

</feed>